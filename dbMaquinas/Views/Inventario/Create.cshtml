@model dbMaquinas.Models.InventarioModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="rosa principal">Adicionar Novo</h1>

<h4 class="rosa principal2">Inventário</h4>
<hr class="rosa"/>

<div class="containerin3">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nome do Cliente</label>
                <select name="IdCliente" class="form-control">
                    @foreach (var item in Model.ListaClientes)
                    {
                        <option value="@item.IDCliente">@item.NomeCliente</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Patrimônio</label>
                <select name="IDMaquina" class="form-control">
                    @foreach (var item in Model.ListaMaquinas)
                    {
                        <option value="@item.IDMaquina">@item.Patrimonio</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <p></p>

            <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<p></p>

<div>
        <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>
