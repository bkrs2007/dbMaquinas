@model dbMaquinas.Models.CadMaquinas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="rosa principal">Adicionar Novo</h1>

<h4 class="rosa principal2">Cadastro de Máquina</h4>
<hr class="rosa" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patrimonio" class="control-label">Patrimônio</label>
                <input asp-for="Patrimonio" class="form-control" />
                <span asp-validation-for="Patrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memoria" class="control-label"></label>
                <input asp-for="Memoria" class="form-control" />
                <span asp-validation-for="Memoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HD" class="control-label"></label>
                <input asp-for="HD" class="form-control" />
                <span asp-validation-for="HD" class="text-danger"></span>
            </div>

            <p></p>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<p></p>

<div>
    <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
